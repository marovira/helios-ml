[MAIN]
extension-pkg-whitelist=cv2

[MESSAGES CONTROL]
# Disable all docstrings as well as duplicate code. Tests are repetitive by design.
disable=
    missing-module-docstring,
    missing-function-docstring,
    missing-class-docstring,
    trailing-newlines,
    too-few-public-methods
# Ensure that suppression messages that aren't needed get flagged.
enable=
    useless-suppression

[TYPECHECK]
ignored-modules=cv2
