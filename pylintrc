[MAIN]
extension-pkg-whitelist=cv2

[BASIC]
# Force all methods (including private ones) to have a docstring.
no-docstring-rgx=__.*__

[MESSAGES CONTROL]
# Disable docstrings for modules. I can never figure out what to write for them.
disable=
    missing-module-docstring
# Ensure that suppression messages that aren't needed get flagged.
enable=
    useless-suppression

[TYPECHECK]
ignored-modules=cv2
